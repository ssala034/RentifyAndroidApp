<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/cardColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="682dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:background="#00F6F2F2"
            android:orientation="vertical">


            <TextView
                android:textColor="@color/textColor"
                android:id="@+id/textItemHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addItemHeading"
                android:textAlignment="textStart"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView2"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/infromationMessageEditIem" />

            <EditText
                android:id="@+id/textItemName"
                android:textColorHint="@color/textColor"
                android:backgroundTint="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/hintItemName"
                android:inputType="text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textItemDescription"
                android:textColorHint="@color/textColor"
                android:backgroundTint="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/hintItemDescription"
                android:inputType="text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textItemRentalPeriod"
                android:textColorHint="@color/textColor"
                android:backgroundTint="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/hintItemPeriod"
                android:inputType="text"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/textItemRentalFee"
                android:textColorHint="@color/textColor"
                android:backgroundTint="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:hint="@string/hintItemFee"
                android:inputType="text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewCategoryInstruction"
                android:textColor="@color/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hintItemCategory" />

            <Spinner
                android:id="@+id/categoryOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFFFFF"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/buttonCreateItem"
                android:background="@drawable/btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="@string/doneCreatingCategory" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>